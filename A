#include <stdio.h>

int main() {
    int n, i;

    // Input array size
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Input array elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Assume first element is the largest
    int largest = arr[0];

    // Compare with other elements
    for (i = 1; i < n; i++) {
        if (arr[i] > largest) {
            largest = arr[i];
        }
    }

    // Output the result
    printf("The largest element in the array is: %d\n", largest);

    return 0;
}
